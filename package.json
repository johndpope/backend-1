{
  "name": "pocket-cards-backend",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/pocket-cards/backend.git"
  },
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/ecs/app.ts",
    "buildw": "cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack --config ./configs/webpack.dev.ts",
    "build:ecs": "cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack --config ./configs/webpack.ecs.ts",
    "build:lambda": "tsc src/lambda/**/* -t ES2018 -m commonjs --outDir build/lambda",
    "build:source": "yarn build:ecs && yarn build:lambda",
    "prebuild": "yarn build:source",
    "build": "yarn docker:build",
    "docker:build": "docker build -t pocket-cards/backend .",
    "docker:buildtest": "cd docker && yarn build",
    "docker:up": "docker-compose -f \"test/docker-compose.yml\" up -d --build",
    "docker:down": "docker-compose -f \"test/docker-compose.yml\" down",
    "docker:restart": "yarn docker:down && yarn docker:up",
    "test:init": "ts-node -r dotenv/config test/initialize.ts",
    "pretest": "yarn docker:restart && sleep 15 && yarn test:init",
    "test": "ts-mocha -r tsconfig-paths/register -r dotenv/config test/**/index.ts --exit --timeout 10000",
    "debug": "ts-mocha -r tsconfig-paths/register -r dotenv/config test/**/index1.ts --exit --timeout 10000",
    "posttest": "yarn docker:down",
    "coverage": "nyc npm run test",
    "valid": "tsc --noEmit"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "reporter": [
      "html",
      "text"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "delay": 3,
    "ignore": [
      "node_modules/*"
    ],
    "execMap": {
      "ts": "ts-node -r tsconfig-paths/register -r dotenv/config"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.671.0",
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dynamodb-helper": "https://github.com/wwalpha/dynamodb-helper.git",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "log4js": "^6.1.0",
    "moment": "^2.24.0",
    "short-uuid": "^3.1.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/archiver": "^3.0.0",
    "@types/aws-lambda": "^8.10.51",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.6",
    "@types/dotenv-webpack": "^1.7.0",
    "@types/jszip": "^3.1.6",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@types/webpack": "^4.41.0",
    "@types/webpack-merge": "^4.1.5",
    "aws-sdk-mock": "^5.1.0",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "chai-http": "^4.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "jszip": "^3.2.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "ts-loader": "^7.0.1",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.9.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
