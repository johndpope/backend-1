{
  "name": "pocket-cards-backend",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/pocket-cards/backend.git"
  },
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "buildw": "webpack -w --config ./configs/webpack.dev.ts",
    "build": "webpack --config ./configs/webpack.prod.ts",
    "sam:api": "sam local start-api -t test/template.yml -n test/envs.json",
    "test": "ts-mocha -r tsconfig-paths/register -r dotenv/config UT/**/index.ts --exit --timeout 10000 dotenv_config_path=./configs/env/.env.test",
    "coverage": "nyc npm run test",
    "build:publish": "webpack --config ./configs/webpack.publish.ts",
    "valid": "tsc --noEmit"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "reporter": [
      "html",
      "text"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "aws-xray-sdk": "^2.5.0",
    "axios": "^0.19.0",
    "dynamodb-helper": "https://github.com/wwalpha/dynamodb-helper.git",
    "lodash": "^4.17.15",
    "log4js": "^6.1.0",
    "moment": "^2.24.0",
    "short-uuid": "^3.1.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/archiver": "^3.0.0",
    "@types/aws-lambda": "^8.10.39",
    "@types/chai": "^4.2.7",
    "@types/jszip": "^3.1.6",
    "@types/lodash": "^4.14.149",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "@types/rimraf": "^2.0.3",
    "@types/webpack": "^4.41.0",
    "@types/webpack-merge": "^4.1.5",
    "archiver": "^3.1.1",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.595.0",
    "aws-sdk-mock": "^4.5.0",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "chai-http": "^4.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "jszip": "^3.2.2",
    "mkdirp": "^0.5.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.2.1",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
